# Set default behavior to automatically normalize line endings
* text=auto

# JS and TS files should always have LF line endings
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Handle binary files
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.webp binary
*.ttf binary
*.woff binary
*.woff2 binary

# Handle Lottie animations (ensure they're treated as text)
*.json text eol=lf

# Handle Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Handle build files
*.sh text eol=lf
*.gradle text eol=lf
