{
  "expo": {
    "name": "BloodLink",
    "displayName": "BloodLink",
    "slug": "MyNewApp",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.jpg",
    "userInterfaceStyle": "light",
    "scheme": "bloodlink",
    "assetBundlePatterns": [
      "**/*"
    ],
    "packagerOpts": {
      "assetExts": [
        "ttf",
        "json",
        "png",
        "jpg",
        "jpeg",
        "webp"
      ]
    },
    "jsEngine": "hermes",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "androidStatusBar": {
      "backgroundColor": "#ffffff",
      "translucent": true
    },
    "androidNavigationBar": {
      "barStyle": "light-content",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "ios": {
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "BloodLink uses your location to show nearby donors and people who need blood.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "BloodLink uses your location to keep your availability updated for nearby donation requests."
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
    
  }
}
